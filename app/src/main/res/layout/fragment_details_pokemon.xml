<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.details.DetailsPokemonFragment">

    <data>
        <variable
            name="pokemonModel"
            type="com.example.pokedex.model.Pokemon" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pokemon_photo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerInside"
                    tools:src="@mipmap/ic_launcher"
                    app:loadImage="@{pokemonModel.url}"
                    tools:ignore="MissingConstraints">
                </ImageView>

                <TextView
                    android:id="@+id/pokemon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_photo"
                    android:layout_marginTop="@dimen/general_16dp"
                    tools:text="pikachu"
                    android:textSize="24dp">
                </TextView>

                <LinearLayout
                    android:id="@+id/linear_normal_infos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/general_16dp"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_name">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:gravity="center"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/type_pokemon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Eletrico"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:gravity="center"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/height_pokemon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1 Kg"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:gravity="center"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/weight_pokemon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="50 Cm"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textSize="16dp"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_margin="@dimen/general_16dp"
                    app:layout_constraintTop_toBottomOf="@id/linear_normal_infos">
                </View>

                <TextView
                    android:id="@+id/pokemon_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:layout_marginTop="@dimen/general_16dp"
                    android:text="Status"
                    android:textSize="24dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_status_text"
                    android:layout_margin="@dimen/general_16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HP"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/pregress_hp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attack"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/progress_attack"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defense"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/defense"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special attack"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/special_attack"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special defense"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/special_defense"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speed"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp"/>

                        <ProgressBar
                            android:id="@+id/speed"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/general_16dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="0" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </FrameLayout>
</layout>